# AI/ML Job Alert System v2.0 - Configuration
# =============================================
# Copy this file to .env and fill in your values
# IMPORTANT: No spaces around = signs!

# =============================================
# REQUIRED: Email Configuration
# =============================================

# Your Gmail address
GMAIL_ADDRESS=your_email@gmail.com

# Gmail App Password (16 characters, no spaces)
# Get from: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=abcdefghijklmnop

# Where to send job alerts (defaults to GMAIL_ADDRESS)
NOTIFICATION_EMAIL=your_email@gmail.com

# =============================================
# REQUIRED: Ollama Configuration
# =============================================

# Ollama model (run: ollama pull llama3)
OLLAMA_MODEL=llama3

# =============================================
# OPTIONAL: Resume & Skills
# =============================================

# Path to your resume file (text or markdown)
RESUME_FILE=./resume.txt

# Your skills (comma-separated) - auto-detected from resume if provided
USER_SKILLS=python,pytorch,tensorflow,machine learning,nlp,deep learning

# =============================================
# OPTIONAL: Job Preferences
# =============================================

# Minimum scores (1-10)
MIN_RELEVANCE_SCORE=5
MIN_COMBINED_SCORE=5.0

# Preferred locations (comma-separated)
PREFERRED_LOCATIONS=Remote,USA,Europe

# Companies to exclude (comma-separated)
EXCLUDED_COMPANIES=

# Experience level: junior, mid, senior, any
EXPERIENCE_LEVEL=any

# Job type: remote, hybrid, onsite, any
JOB_TYPE=any

# Minimum salary (0 to disable)
MIN_SALARY=0

# =============================================
# OPTIONAL: Job Sources
# =============================================

# Enable/disable specific sources (comma-separated)
# Available: remoteok,jobicy,arbeitnow,findwork,himalayas,ycombinator,hackernews,github,stackoverflow,linkedin,indeed,builtin
ENABLED_SOURCES=remoteok,jobicy,arbeitnow,findwork,himalayas,ycombinator,hackernews


# Search keywords (comma-separated)
SEARCH_KEYWORDS=machine learning,AI engineer,data scientist,deep learning,MLOps,NLP

# Max jobs per source
MAX_JOBS_PER_SOURCE=50

# =============================================
# OPTIONAL: Other Settings
# =============================================

# Data storage directory
DATA_DIR=./data

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Request delays (seconds)
REQUEST_DELAY_MIN=1.0
REQUEST_DELAY_MAX=3.0
